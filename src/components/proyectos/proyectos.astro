---
    
	import './proyectos.css';
	import proyectos from './data.json';
	
---
		<section class="proyectos">
            <div class="sec2">
						<h1 class="display-3 pb-4 text-center pt-4">Proyectos Web</h1>
						<div class="row col-md-12">
							{
							proyectos.map((data) =>
								(
								<>
								<div class="col-md-4 pb-4 mb-4">

									<div class="card tarjeta">
										
											<h5 class="card-title text-center pt-3 pb-3">{data.name}</h5>
											
										
										<div class="bg-image hover-overlay ripple rounded-0" data-mdb-ripple-color="light">
											<img class="img-fluid" src={data.img}
											alt={data.name} />
											
										</div>
												<div class="card-body" style="display: grid; align-items: center;">
													<div class="grupo">
														{
															data.tecs.map((item) => (
															<span class="badge rounded-pill bg-primario">{item}</span>
															))
														}	
													</div>
													<p class="card-text">{data.description}</p> 
													
													
													<div class="grupob">

													 {data.git !== 'default' ? (
														 <>
														<a href={data.git} class="btn btn-primario" style="margin-right: 5px;" target="_blank" title="Ver codigo" >GIT  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-git" viewBox="0 0 16 16">
														<path d="M15.698 7.287 8.712.302a1.03 1.03 0 0 0-1.457 0l-1.45 1.45 1.84 1.84a1.223 1.223 0 0 1 1.55 1.56l1.773 1.774a1.224 1.224 0 0 1 1.267 2.025 1.226 1.226 0 0 1-2.002-1.334L8.58 5.963v4.353a1.226 1.226 0 1 1-1.008-.036V5.887a1.226 1.226 0 0 1-.666-1.608L5.093 2.465l-4.79 4.79a1.03 1.03 0 0 0 0 1.457l6.986 6.986a1.03 1.03 0 0 0 1.457 0l6.953-6.953a1.03 1.03 0 0 0 0-1.457"/>
														</svg></a> 
														</>	
														) : (
														<></>	
													)}

													 {data.url !== 'default' ? (
														 <>
															<a href={data.url} class="btn btn-primario " target="_blank"  title="Ver demo">PREVIEW <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-compact-right" viewBox="0 0 16 16">
																<path fill-rule="evenodd" d="M6.776 1.553a.5.5 0 0 1 .671.223l3 6a.5.5 0 0 1 0 .448l-3 6a.5.5 0 1 1-.894-.448L9.44 8 6.553 2.224a.5.5 0 0 1 .223-.671"/>
																</svg></a>	
														</>	
														) : (
														<></>	
													)}
													
													</div>
												</div>
									</div>
									
								</div>
								</>		
								))
							}  
			</div>         
        </section>

		